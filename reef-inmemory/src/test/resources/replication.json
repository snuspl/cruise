{
  "rules" : [
    {
      "id" : "daily-small",
      "conditions" : [
        {
          "type"     : "path",
          "operator" : "recursive",
          "operand"  : "/daily/"
        },
        {
          "type"     : "size",
          "operator" : "lt",
          "operand"  : "128M"
        }
      ],
      "action" : {
        "cache_replication_factor" : 5,
        "pin"    : true,
        "write" : {
          "sync" : "WRITE_BACK",
          "base_replication_factor" : 3
        }
      }
    },
    {
      "id" : "hourly",
      "conditions" : [
        {
          "type"     : "path",
          "operator" : "recursive",
          "operand"  : "/hourly/"
        }
      ],
      "action" : {
        "cache_replication_factor" : -1,
        "pin"    : false,
        "write" : {
          "sync" : "WRITE_THROUGH",
          "base_replication_factor" : 3
        }
      }
    }
  ],
  "default" : {
    "cache_replication_factor" : 2,
    "pin"    : false,
    "write" : {
      "sync" : "WRITE_BACK",
      "base_replication_factor" : 3
    }
  }
}
