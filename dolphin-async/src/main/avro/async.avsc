[
/**
 * Worker specific information.
 */
{
  "namespace": "edu.snu.cay.async.metric.avro",
  "type": "record",
  "name": "WorkerMsg",
  "fields":
  [
    {"name": "iteration", "type": "int"},
    {"name": "numDataUnits", "type": "int"}
  ]
},

/**
 * Server specific information.
 */
{
  "namespace": "edu.snu.cay.async.metric.avro",
  "type": "record",
  "name": "ServerMsg",
  "fields":
  [
    {"name": "window", "type": "int"},
    {"name": "numKeys", "type": "int"}
  ]
},

/**
 * A message containing metrics and other Task-specific information.
 * A message with srcType Worker contains a workerMsg,
 * while a message with srcType Server contains a serverMsg.
 */
{
  "namespace": "edu.snu.cay.async.metric.avro",
  "type": "record",
  "name": "MetricsMessage",
  "fields":
  [
    {"name": "srcType", "type": {"type": "enum", "name": "SrcType",
        "symbols": ["Worker", "Server"]}},
    {"name": "metrics", "type": "edu.snu.cay.common.metric.avro.Metrics"},
    {"name": "workerMsg", "type": ["null", "WorkerMsg"], "default": null},
    {"name": "serverMsg", "type": ["null", "ServerMsg"], "default": null}
  ]
}
]
